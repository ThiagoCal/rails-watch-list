<div class="banner-show" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @list.photo.key %>')">
  <div class="container">
    <h1 class="text-center"><%= @list.name %></h1>
  </div>
</div>
<div>
    <div class="container p-3">

    </div>
  <div class="container">
    <div class="row">
      <ul class="list-group col-6">
        <% @list.bookmarks.each do |bookmark| %>
          <div>
            <li class="list-group-item d-flex">
            <div>
              <img class="mx-auto d-block img-fluid img-thumbnail" style="max-width:80%" alt="Responsive image" src=<%= bookmark.movie.poster_url  %>>
            </div>
              <div class="col-6">
                <h3 class="border-bottom"><%= bookmark.movie.title %></h3>
                <p>Comment:<br><%= bookmark.comment %></p>
              </div>
            </li>
            <li class="list-group-item d-flex justify-content-between">
            <%= link_to "Edit",edit_bookmark_path(bookmark), class: "btn btn-blue" %>
                <%= link_to "Remove",
                            bookmark_path(bookmark), class: "btn btn-delete",
                            method: :delete,
                            data: { confirm: "Are you sure?" } %>
            </li>
          </div>
        <% end %>
      </ul>
      <div class="col-3">
        <%= link_to "Add movies!", new_list_bookmark_path(@list), class: "btn btn-flat"%>
        <%= link_to "Remove List",
                            list_path(@list), class: "btn btn-delete",
                            method: :delete,
                            data: { confirm: "Are you sure?" } %>
      </div>
    </div>
  </div>
